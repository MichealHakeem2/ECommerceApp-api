@model IEnumerable<ECommerceApp.Core.Entities.Payment>
<h2>Payments</h2>
<table class="table">
    <thead>
        <tr>
            <th>Payment ID</th>
            <th>Order ID</th>
            <th>Amount</th>
            <th>Method</th>
            <th>Status</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var payment in Model)
        {
            <tr>
                <td>@payment.PaymentId</td>
                <td>@payment.OrderId</td>
                <td>$@payment.Amount</td>
                <td>@payment.Method</td>
                <td>@payment.Status</td>
                <td>@payment.TransactionDate</td>
            </tr>
        }
    </tbody>
</table>
