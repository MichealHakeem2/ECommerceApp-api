@model ECommerceApp.Core.Entities.Product
<h2>@Model.Name</h2>
<img src="@Model.ImageUrl" class="img-fluid mb-3" />
<p>@Model.Description</p>
<p>Price: $@Model.Price</p>
<p>Stock: @Model.StockQuantity</p>
<form method="post" action="/Cart/AddItemToCart">
    <input type="hidden" name="productId" value="@Model.ProductId" />
    <input type="number" name="quantity" value="1" min="1" class="form-control w-25 mb-2" />
    <button type="submit" class="btn btn-success">Add to Cart</button>
</form>
