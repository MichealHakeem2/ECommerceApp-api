@model IEnumerable<ECommerceApp.Core.Entities.Product>
<h2>Products</h2>
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-3 mb-3">
            <div class="card">
                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">$@product.Price</p>
                    <a href="/Product/Details/@product.ProductId" class="btn btn-primary">View</a>
                </div>
            </div>
        </div>
    }
</div>
